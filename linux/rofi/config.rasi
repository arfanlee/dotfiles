configuration {
  display-drun: "ï€‚";
  display-window: "Windows";
  drun-display-format: "{name}";
  font: "JetBrainsMono 10";
  modi: "window,run,drun,filebrowser";
}

@theme "/dev/null"

* {
  bg-normal: #1E2127;
  bg-focus: #7E9CD8;

  fg-normal: @bg-focus;
  fg-focus: #ABB2BF;

  background-color: @bg-normal;
  
  border: 0;
  margin: 0 0 2 0;
  padding: 0;
  spacing: 0;
}

window {
  width: 35%;
}

prompt {
  background-color: #2A2A37;
  text-color: @fg-focus;
  enabled: true;
  padding: 8;
  border: 8 0 8 8;
}

entry {
  placeholder: "Search";
  placeholder-color: #999999;
  background-color: #2A2A37;
  padding: 8 8 8 0;
  border: 8 8 8 0;
  text-color: @fg-focus;
}

inputbar {
  children: [prompt, entry];
}

listview {
  background-color: @bg-normal;
  columns: 1;
  lines: 8;
}

element {
  padding: 8;
  border: 0 8 0 8;
  text-color: @fg-focus;
}

element alternate {
  background-color: #363646;
  text-color: @fg-focus;
}

element selected {
  background-color: @bg-focus;
  text-color: @bg-normal;
}

element-text {
  background-color: inherit;
  text-color: inherit;
  vertical-align: 0.5;
}

element-icon {
  size: 30;
}

mainbox {
  background-color: @bg-normal;
  children: [inputbar, listview];
}


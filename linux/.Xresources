! ## Add colour support
XTerm.termName: xterm-256color

! ## Font
XTerm*faceName: Hack Nerd Font
XTerm*faceSize: 10

! VT Font Menu: Unreadable
XTerm*faceSize1: 8

! VT Font Menu: Tiny
XTerm*faceSize2: 10

! VT Font Menu: Small
XTerm*faceSize3: 12

! VT Font Menu: Medium
XTerm*faceSize4: 16

! VT Font Menu: Large
XTerm*faceSize5: 22

! VT Font Menu: Huge
XTerm*faceSize6: 24

! Scrollbar
XTerm*vt100.scrollBar: false

! No scroll in input
XTerm*scrollTtyOutput: false

! Lines of output scrollback
XTerm*saveLines: 10000

! Enable copy/paste
XTerm*selectToClipboard: true

! Select text
XTerm*highlightSelection: true

! Remove trailing spaces
XTerm*trimSelection: true

! Fix backspace kill word
XTerm*.backarrowKey: false

! KeyBindings
XTerm*vt100.translations: #override \n\
	Ctrl <Key>-: smaller-vt-font \n\
	Ctrl <Key>+: larger-vt-font \n\
	Ctrl <Key>0: set-vt-font(d) \n\
	Ctrl <Key>C: copy-selection(CLIPBOARD) \n\
	Ctrl <Key>V: insert-selection(CLIPBOARD)

! Colour themes
XTerm*title: XTerminal
XTerm*background: #2b2c34
XTerm*foreground: #abb2bf
